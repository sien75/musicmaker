{
    "compilerOptions": {
        "target": "ES2015",
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib/esm",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["./src/*"]
}
